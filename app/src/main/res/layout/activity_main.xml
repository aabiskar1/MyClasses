<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/sunday_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:elevation="24dp"
                app:cardBackgroundColor="@color/white_transparent16"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/sunday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="SUNDAY"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/lbl_sunday"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/lbl_sunday_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lbl_sunday_holder"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/lbl_sunday_holder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Number of classes: "
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/monday_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:elevation="24dp"
                app:cardBackgroundColor="@color/white_transparent16"
                app:cardCornerRadius="20dp">

