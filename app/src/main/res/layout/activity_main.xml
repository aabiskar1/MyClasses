                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/friday_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:elevation="24dp"
                app:cardBackgroundColor="@color/white_transparent16"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/friday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_friday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="FRIDAY"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/lbl_friday"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/lbl_friday_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lbl_friday_holder"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/lbl_friday_holder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Number of classes: "
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:focusable="true"
        android:translationZ="90dp"
        app:fab_addButtonColorNormal="@color/fab_color_background_normal"
        app:fab_addButtonColorPressed="@color/fab_color_background_pressed"
        app:srcCompat="@android:drawable/ic_menu_share">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabitem_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fab_color_background_normal"
            app:fab_colorPressed="@color/fab_color_background_pressed"
            app:fab_icon="@drawable/ic_note_add_24dp"
            app:fab_size="mini" />



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabitem_aboutme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/fab_color_background_normal"
            app:fab_colorPressed="@color/fab_color_background_pressed"
            app:fab_icon="@drawable/ic_info_outline_white_24dp"
            app:fab_size="mini" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>