                    android:id="@+id/monday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_monday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="MONDAY"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/lbl_monday"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/lbl_monday_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lbl_monday_holder"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/lbl_monday_holder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Number of classes: "
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tuesday_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:elevation="24dp"
                app:cardBackgroundColor="@color/white_transparent16"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:id="@+id/tuesday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="TUESDAY"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/lbl_tuesday"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/lbl_tuesday_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/lbl_tuesday_holder"
                            android:gravity="center"
                            android:text="0"
